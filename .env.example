# =============================================================
# Credit Repair SaaS - Environment Variables
# =============================================================
# IMPORTANT: Copy this file to .env and fill in your values
# NEVER commit the .env file to git!
# =============================================================

# Database
POSTGRES_USER=creditrepair
POSTGRES_PASSWORD=CHANGE_THIS_TO_A_STRONG_PASSWORD
POSTGRES_DB=creditrepair

# Backend
NODE_ENV=production
PORT=5000
DATABASE_URL=postgresql://creditrepair:CHANGE_THIS_TO_A_STRONG_PASSWORD@postgres:5432/creditrepair

# JWT - Generate a strong random secret: openssl rand -base64 64
JWT_SECRET=GENERATE_A_RANDOM_64_CHAR_SECRET_HERE
JWT_EXPIRE=7d

# Frontend URL (your production domain)
FRONTEND_URL=https://yourdomain.com
VITE_API_URL=https://yourdomain.com/api

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4-turbo

# Auth0 Configuration
AUTH0_DOMAIN=your-tenant.us.auth0.com
AUTH0_CLIENT_ID=your_auth0_client_id
AUTH0_CLIENT_SECRET=your_auth0_client_secret
AUTH0_AUDIENCE=https://yourdomain.com/api
VITE_AUTH0_DOMAIN=your-tenant.us.auth0.com
VITE_AUTH0_CLIENT_ID=your_auth0_client_id
VITE_AUTH0_AUDIENCE=https://yourdomain.com/api

# SMTP (Email)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=you@example.com
# SMTP_PASS=your_smtp_password

# Stripe Configuration - Use test keys for development!
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Encryption Key - Generate with: openssl rand -hex 16
ENCRYPTION_KEY=GENERATE_A_RANDOM_32_CHAR_HEX_KEY

# Plaid Configuration (Bank Account Verification)
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret
PLAID_ENV=sandbox
